{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES5",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules", ".vscode"]
}
